@using Control.Model.Entities
@model IEnumerable<Transaction>

@{
    ViewBag.Title = "ExtratoBancario";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}
 
<div class="row">
    <div id="breadcrumb" class="col-xs-12">
        <ol class="breadcrumb">
            <li><a href="index.html">Financeiro</a></li>
            <li><a href="#">Extrato</a></li>
            @*<li><a href="#">Edição</a></li>*@
        </ol>
    </div>
</div>
<!-- Tabela Inicio-->
<div class="row">
    <div class="col-xs-12">
        <h2>Extrato Bancario</h2>
        <p>
            

            @using (Html.BeginForm("Upload", "Financeiro", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <input type="file" name="file" />
                <input type="submit" name="Submit" id="Submit" value="Upload" />
            }


        </p>
        <div class="box">
            <div class="box-header">
                <div class="box-name">
                    <i class="fa fa-table"></i>
                    <span>Resultados encontrados</span>
                </div>
                <div class="box-icons">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a class="expand-link">
                        <i class="fa fa-expand"></i>
                    </a>
                    <a class="close-link">
                        <i class="fa fa-times"></i>
                    </a>
                </div>
                <div class="no-move"></div>
            </div>
            <div class="box-content no-padding">
                <table class="table table-striped table-bordered table-hover table-heading no-border-bottom">
                    <thead>
                        <tr>
                            <th>
                                Id
                            </th>
                            <th>
                                TransType
                            </th>
                            <th>
                                Date
                            </th>
                            <th>
                                Memo
                            </th>
                            <th>
                                Currency
                            </th>
                            <th>
                                Amount
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TransType)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Date)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Memo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Currency)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Amount)
                                    </td>
                                    
                                </tr>
                            }
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- Tabela Fim -->
<script type="text/javascript" src="~/plugins/jquery/jquery-2.1.0.min.js"></script>
<script type="text/javascript">

$(document).ready(function() {
	// Drag-n-Drop feature
	WinMove();
});
</script>
